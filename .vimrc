" syntax highlighting
syntax on
colorscheme molokai
set t_Co=256

" activate plugins
filetype plugin on

" tab support
set et
set tabstop=4
set shiftwidth=4
set softtabstop=4
set smarttab
set expandtab

" show number lines
set number

" copying and pasting on system clipboard
set clipboard=unnamed
set clipboard=unnamedplus
set go+=a

" indentation
set copyindent
set preserveindent
set smartindent
set autoindent
